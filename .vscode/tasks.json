{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GO Run",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "${relativeFile}"
            ],
            "options": {
                "env": {
                    "GOPATH": "/go:${workspaceRoot}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}